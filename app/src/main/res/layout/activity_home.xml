<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:text="to MainActivity"
        android:id="@+id/bt_to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="to SliderViewActivity"
        android:id="@+id/bt_to_slider_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="to TagLayoutActivity"
        android:id="@+id/bt_to_tag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="to TouchViewActivity"
        android:id="@+id/bt_to_touch_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="to ScrollViewActivity"
        android:id="@+id/bt_to_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>